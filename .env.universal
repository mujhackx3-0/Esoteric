# Universal Environment Configuration
# Works in ANY environment (development, production, cloud)
# GROQ_API_KEY is hardcoded in the application - no need to configure

# Application Settings
APP_NAME="Esoteric Loan Sales Assistant"
APP_VERSION="2.0.0"
DEBUG=false

# API Settings
HOST=0.0.0.0
PORT=8000

# Security (optional - has defaults)
SECRET_KEY=your-secret-key-here-optional
ALLOWED_ORIGINS=["*"]

# LLM Settings (optional - has defaults)
GROQ_MODEL_NAME=mixtral-8x7b-32768
GROQ_TEMPERATURE=0.5
GROQ_MAX_TOKENS=1024

# Database Paths (optional - has defaults)
SQLITE_DB_PATH=chat_memory_loan_sales.db
CHROMA_DB_PERSIST_DIR=loan_sales_rag.db

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Performance (optional - has defaults)
MAX_MESSAGE_HISTORY=50
EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_TOP_K=3

# Monitoring (optional - has defaults)
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Frontend URLs (for production deployment)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

